<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/simple_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:controller_layout_id="@layout/layout_video_controller"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:resize_mode="fixed_width"
        app:surface_type="texture_view"
        app:use_artwork="false"
        app:use_controller="true" />

    <ProgressBar
        android:id="@+id/common_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/loading_progress"
        app:layout_constraintBottom_toBottomOf="@id/simple_player_view"
        app:layout_constraintEnd_toEndOf="@id/simple_player_view"
        app:layout_constraintStart_toStartOf="@id/simple_player_view"
        app:layout_constraintTop_toTopOf="@id/simple_player_view" />

</android.support.constraint.ConstraintLayout>
